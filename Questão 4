#include <stdio.h>
#include <conio.h>
#include <math.h>
#include <locale.h>

#define PI 3.14

float Volume(float raio){
    float v= 4/3 * (PI*pow(raio,3));
    return v;
}

int main(){
    setlocale (LC_ALL, "Portuguese_Brazil");
    float Raio,Resultado;

    printf("Digite o raio da esfera:");
    scanf("%f",&Raio);

    Resultado=Volume(Raio);
    printf("O volume da esfera Ã©:%.    3f\n",Resultado);

    getchar();
    return 0;
} 
